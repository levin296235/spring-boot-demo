<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.megvii.springboot.mapper.UserInfoMapper">

    <sql id="base_column_list">
      id,user_name,pass_wd,real_name,age,local_address,birthday,create_time
    </sql>

    <select id="selectUserList" resultType="com.megvii.springboot.model.UserInfo">
        select
        <include refid="base_column_list"></include>
        from user_info
    </select>

    <select id="selectUserById" resultType="com.megvii.springboot.model.UserInfo">
        select
        <include refid="base_column_list"></include>
        from user_info
        where id = #{id}
    </select>

    <update id="updateUserById" parameterType="com.megvii.springboot.model.UserInfo">
        update user_info set user_name = #{name} where id = #{id}
    </update>

    <insert id="insertUser" parameterType="com.megvii.springboot.model.UserInfo" keyProperty="id" useGeneratedKeys="true">
        insert into user_info(user_name,pass_wd,real_name,age,local_address,birthday,create_time) values (#{userName},#{passWd},#{realName},#{age},#{localAddress},#{birthday},#{createTime})
    </insert>

    <delete id="deleteUserById" parameterType="java.lang.Integer">
        delete from user_info where id = #{id}
    </delete>
</mapper>