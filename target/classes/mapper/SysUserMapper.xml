<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.megvii.springboot.mapper.SysUserMapper">

    <resultMap id="userMap" type="com.megvii.springboot.model.SysUser">
        <id property="id" column="id" />
        <result property="userName" column="user_name"/>
        <result property="passWord" column="pass_word"/>
        <result property="phone" column="phone"/>
        <result property="email" column="email"/>
    </resultMap>
    
    <sql id="base_column_list">
      id,user_name,pass_word,phone,email
    </sql>

    <select id="selectUserList" resultMap="userMap">
        select
        <include refid="base_column_list"></include>
        from t_user
    </select>

    <select id="selectUserById" resultMap="userMap">
        select
        <include refid="base_column_list"></include>
        from t_user
        where id = #{id}
    </select>

    <!-- 根据用户名查找用户 -->
    <select id="selectUserByName" resultMap="userMap">
		select * from t_user where user_name=#{userName}
	</select>

    <update id="updateUserById" parameterType="com.megvii.springboot.model.SysUser">
        update t_user set user_name = #{userName}, pass_word = #{passWord},phone = #{phone},email = #{email} where id = #{id}
    </update>

    <insert id="insertUser" parameterType="com.megvii.springboot.model.SysUser" keyProperty="id" useGeneratedKeys="true">
        insert into t_user(user_name,pass_word,phone = #{phone},email = #{email}) values (#{userName},#{passWord},#{phone},#{email})
    </insert>

    <delete id="deleteUserById" parameterType="java.lang.Integer">
        delete from t_user where id = #{id}
    </delete>
</mapper>